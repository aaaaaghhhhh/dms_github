<?import javafx.scene.layout.VBox?>
<StackPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.comp2059.snakegame.controllers.MainController">
   <children>
      <ImageView fx:id="imageView" fitHeight="550.0" fitWidth="763.0" pickOnBounds="true">
         <image>
            <Image url="@../images/Snake.png" />
         </image>
      </ImageView>

      <VBox fx:id="buttonsContainer" alignment="CENTER" spacing="20"> <!-- 增加间距 -->
         <Button fx:id="startButton" text="START" style="-fx-background-color: blue; -fx-font-size: 24;" prefWidth="200" prefHeight="50" textFill="#ef0000" /> <!-- 调整按钮大小和字体大小 -->
         <Button fx:id="optionsButton" text="OPTION" style="-fx-background-color: blue; -fx-font-size: 24;" prefWidth="200" prefHeight="50" textFill="#f80505" />
         <Button fx:id="infoButton" text="INFO" style="-fx-background-color: BLUE; -fx-font-size: 24;" prefWidth="200" prefHeight="50" textFill="#f60404" />
      </VBox>
   </children>
</StackPane>
